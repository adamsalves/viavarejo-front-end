$margin-col = 2px

col(col-num)
  width ((100% * col-num) /12) - ($margin-col * 2)
  margin $margin-col
  box-sizing border-box

.transaction
  col(4.5)
  display inline-block
  border 1px solid #979797
  border-radius 5px
  padding 15px

.account
  col(8)
  display inline-block
  position absolute
  padding 20px

.transaction__form
.account__data  
  margin-top 20px

.account__data  
  width 100%   

.transaction__title
.account__title  
  text-align center

.transaction__label-type
.transaction__select-type
.transaction__label-name
.transaction__input-name
.transaction__label-value
.transaction__input-value
.transaction__button-add
  display block
  width 100%

.transaction__select-type
.transaction__input-name
.transaction__input-value
  padding 10px
  background #ffffff
  border-radius 5px
  margin 10px 0 20px 0 
  border 1px solid #979797
  color #979797

.transaction__button-add
  color #fff
  background #979797
  padding 10px
  border none
  border-radius 5px
  font-size .9em
  cursor pointer
  margin-bottom 10px
  &:hover
    background #000

table
  border-collapse collapse

.account__list
  border-top 1px solid black
  border-bottom 1px solid black
  height 40px

.account__list--normal 
  border none 
  height 30px  

.account__head
  height 30px

.account__head-merc  
  text-align left 

.account__item
  font-weight bold
  height 40px

.account__item--text-center
  text-align center

.account__desc
  font-size .7em
  text-align center

.account__list-price
  text-align center

.account__list-name
  width 70%